generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  name String
  password String
  email String @unique
  balance Float @default(0.00)
  savings Savings[]
  transfers Transfers[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Savings {
  id String @id @default(uuid())
  name String
  description String?
  balance Float @default(0.00)
  userId String
  user Users @relation(fields: [userId], references: [id])
  transfers Transfers[]
}

model Transfers {
  id String @id @default(uuid())
  value Float
  createdAt DateTime @default(now())
  userId String
  user Users @relation(fields: [userId], references: [id])
  savingId String
  saving Savings @relation(fields: [savingId], references: [id])
}

